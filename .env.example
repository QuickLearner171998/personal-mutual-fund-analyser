# MF Portfolio Analyzer - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS (Required)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-api-key-here
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here

# =============================================================================
# LLM MODEL SELECTION (Optional - defaults shown)
# =============================================================================

# Primary LLM (general tasks with reasoning)
PRIMARY_LLM_MODEL=gpt-5

# Fast LLM for RAG and quick queries
RAG_LLM_MODEL=gpt-4.1-mini

# Advanced reasoning LLM (complex thinking)
REASONING_LLM_MODEL=gpt-5

# Fallback LLM
FALLBACK_LLM_MODEL=gemini-2.0-flash-exp

# Perplexity for market research
PERPLEXITY_MODEL=sonar-pro

# =============================================================================
# EMBEDDINGS (Optional)
# =============================================================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# =============================================================================
# AGENT CONFIGURATION (Optional)
# =============================================================================
ENABLE_PORTFOLIO_AGENT=true
ENABLE_GOAL_AGENT=true
ENABLE_MARKET_AGENT=true
ENABLE_STRATEGY_AGENT=true
ENABLE_COMPARISON_AGENT=true

ENABLE_RAG=true
ENABLE_STREAMING=true

# =============================================================================
# FINANCIAL ASSUMPTIONS (Optional)
# =============================================================================
EXPECTED_EQUITY_RETURN=12
EXPECTED_DEBT_RETURN=7
EXPECTED_HYBRID_RETURN=10

MAX_EQUITY_ALLOCATION=80
MIN_DEBT_ALLOCATION=20

# =============================================================================
# PATHS (Optional)
# =============================================================================
DATA_DIR=./data
VECTOR_STORE_PATH=./data/vector_store

# =============================================================================
# API TIMEOUTS (Optional, in seconds)
# =============================================================================
MFAPI_TIMEOUT=10
PERPLEXITY_TIMEOUT=30

# =============================================================================
# UI CONFIGURATION (Optional)
# =============================================================================
APP_TITLE=MF Portfolio Analyzer
PAGE_ICON=ðŸ’¹
LAYOUT=wide

# =============================================================================
# DEBUGGING (Optional)
# =============================================================================
DEBUG_MODE=false
LOG_LEVEL=INFO
SHOW_INTENT_CLASSIFICATION=true
