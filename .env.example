# MF Portfolio Bot - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# API KEYS (Required)
# =============================================================================
OPENAI_API_KEY=sk-your-openai-key-here
GOOGLE_API_KEY=your-google-api-key-here
PERPLEXITY_API_KEY=pplx-your-perplexity-key-here

# =============================================================================
# LLM MODEL SELECTION (Optional - defaults shown)
# =============================================================================

# Primary LLM (reasoning model for analysis)
PRIMARY_LLM_MODEL=o1-mini
PRIMARY_LLM_MAX_TOKENS=10000

# Fast LLM for RAG and quick queries
RAG_LLM_MODEL=gpt-4o-mini
RAG_LLM_TEMPERATURE=0
RAG_LLM_MAX_TOKENS=2000

# Advanced reasoning LLM for complex planning
REASONING_LLM_MODEL=o1-preview

# Fallback LLM
FALLBACK_LLM_MODEL=gemini-2.0-flash-exp
FALLBACK_LLM_TEMPERATURE=0
FALLBACK_LLM_MAX_TOKENS=2000

# Perplexity for market research
PERPLEXITY_MODEL=llama-3.1-sonar-large-128k-online
PERPLEXITY_TEMPERATURE=0.2
PERPLEXITY_MAX_TOKENS=1000

# =============================================================================
# EMBEDDINGS (Optional)
# =============================================================================
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# =============================================================================
# AGENT CONFIGURATION (Optional)
# =============================================================================
ENABLE_PORTFOLIO_AGENT=true
ENABLE_GOAL_AGENT=true
ENABLE_MARKET_AGENT=true
ENABLE_STRATEGY_AGENT=true
ENABLE_COMPARISON_AGENT=true

ENABLE_RAG=true
ENABLE_STREAMING=true

# =============================================================================
# FINANCIAL ASSUMPTIONS (Optional)
# =============================================================================
EXPECTED_EQUITY_RETURN=12
EXPECTED_DEBT_RETURN=7
EXPECTED_HYBRID_RETURN=10

MAX_EQUITY_ALLOCATION=80
MIN_DEBT_ALLOCATION=20

# =============================================================================
# PATHS (Optional)
# =============================================================================
DATA_DIR=./data
VECTOR_STORE_PATH=./data/vector_store

# =============================================================================
# API TIMEOUTS (Optional, in seconds)
# =============================================================================
MFAPI_TIMEOUT=10
PERPLEXITY_TIMEOUT=30

# =============================================================================
# UI CONFIGURATION (Optional)
# =============================================================================
APP_TITLE=MF Portfolio Bot
PAGE_ICON=ðŸ’¹
LAYOUT=wide

# =============================================================================
# DEBUGGING (Optional)
# =============================================================================
DEBUG_MODE=false
LOG_LEVEL=INFO
SHOW_INTENT_CLASSIFICATION=true
